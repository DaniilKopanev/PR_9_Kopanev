<Window x:Class="PR9_Kopanev.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR9_Kopanev"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <ListBox Grid.Row="0" Name="phoneslist">
            <TextBlock FontWeight="Bold" TextDecorations="Underline" Text="Новинки 2015 года"/>
            <ListBoxItem Background="LightGray">LG Nexus 5X</ListBoxItem>
            <ListBoxItem>Huawei Nexus 6</ListBoxItem>
            <ListBoxItem Background="LightGray">Iphone 6S</ListBoxItem>
            <ListBoxItem>Iphone 6S Plus</ListBoxItem>
            <ListBoxItem Background="LightGray">Asus Zenphone 2</ListBoxItem>
            <ListBoxItem>Microsoft Lumia 950</ListBoxItem>
        </ListBox>
        <TextBlock x:Name="TextBlock" Grid.Row="1" Text="444" Width="200" Height="40" VerticalAlignment="Top"/>
        <Button x:Name="Button" Content="Обращение" Grid.Row="1" Height="30" Click="Button_Click"/>
        
    </Grid>
</Window>
